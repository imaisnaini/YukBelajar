<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Card 1: Hewan -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHewan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgHewan"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_animals"
                    android:scaleType="centerCrop"
                    android:contentDescription="Gambar Hewan" />

                <TextView
                    android:id="@+id/tvHewan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Hewan"
                    android:textSize="28sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 2: Buah -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBuah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgBuah"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_fruits"
                    android:scaleType="centerCrop"
                    android:contentDescription="Gambar Buah" />

                <TextView
                    android:id="@+id/tvBuah"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Buah"
                    android:textSize="28sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 3: Bentuk -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBentuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgBentuk"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_shapes"
                    android:scaleType="centerCrop"
                    android:contentDescription="Gambar Bentuk" />

                <TextView
                    android:id="@+id/tvBentuk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Bentuk"
                    android:textSize="28sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
